<Window x:Class="Capitulo6_7WPF.Capitulo_7.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo6_7WPF.Capitulo_7"
        mc:Ignorable="d"
        Title="Ejercicio 2" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <StackPanel Orientation="Horizontal">
                <Label Content="Palabra"></Label>
                <TextBox x:Name="palabraTextBox" Height="18" Width="150"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label Content="Definicion"></Label>
            </StackPanel>

            <StackPanel>
                <TextBox x:Name="DefiniciontextBox" Height="40"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content=" Guardar " x:Name="guardarButton" Margin="0,10,0,0" Click="guardarButton_Click"></Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
